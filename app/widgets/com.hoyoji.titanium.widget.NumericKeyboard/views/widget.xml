<Alloy>
		<View class="keyboard" zIndex="900" width="Ti.UI.FILL"  top="100%">
			<View backgroundColor="white" opacity="0.5" height="Ti.UI.FILL" width="Ti.UI.FILL" />
			<View layout="vertical">
			<View layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
				<View height="Ti.UI.SIZE" layout="horizontal">
					<Button class="num" onSingletap="numPress" title="7" />
					<Button class="num" onSingletap="numPress" title="8" />
					<Button class="num" onSingletap="numPress" title="9" />
					<Button onSingletap="operation" title="÷" />
					<Button onSingletap="clear" title="C" />
				</View>
				<View height="Ti.UI.SIZE" layout="horizontal">
					<Button class="num" onSingletap="numPress" title="4" />
					<Button class="num" onSingletap="numPress" title="5" />
					<Button class="num" onSingletap="numPress" title="6" />
					<Button onSingletap="operation" title="×" />
					<Button onSingletap="backspace" title="←" />
				</View>
			</View>
			<View layout="horizontal" horizontalWrap="false" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
				<View width="Ti.UI.SIZE" layout="vertical" height="Ti.UI.SIZE">
					<View width="Ti.UI.SIZE" height="Ti.UI.SIZE" layout="horizontal">
						<Button class="num" onSingletap="numPress" title="1" />
						<Button class="num" onSingletap="numPress" title="2" />
						<Button class="num" onSingletap="numPress" title="3" />
						<Button onSingletap="operation" title="-" />
					</View>
					<View width="Ti.UI.SIZE" height="Ti.UI.SIZE" layout="horizontal">
						<Button onSingletap="decimal" title="." />
						<Button class="num" onSingletap="numPress" title="0" />
						<Button onSingletap="operation" title="=" />
						<Button onSingletap="operation" title="+" />
					</View>
				</View>
				<Button id="submitButton" onSingletap="submitValue" title="确定" height="100%"/>
			
			</View>
			</View>
		</View>
</Alloy>