<Alloy>
	<View class="keyboard" zIndex="900" width="Ti.UI.FILL" height="168" bottom="-168">
		<View backgroundColor="#40000000" height="Ti.UI.FILL" width="Ti.UI.FILL" />
		<View layout="vertical" height="Ti.UI.FILL" width="Ti.UI.FILL">
			<View layout="vertical" width="Ti.UI.FILL" height="50%">
				<View height="42" layout="horizontal" horizontalWrap="false">
					<Button class="num" onSingletap="numPress" title="7" />
					<Button class="num" onSingletap="numPress" title="8" />
					<Button class="num" onSingletap="numPress" title="9" />
					<Button onSingletap="operation" title="÷" />
					<Button onSingletap="clear" title="C" />
				</View>
				<View height="42" layout="horizontal" horizontalWrap="false">
					<Button class="num" onSingletap="numPress" title="4" />
					<Button class="num" onSingletap="numPress" title="5" />
					<Button class="num" onSingletap="numPress" title="6" />
					<Button onSingletap="operation" title="×" />
					<Button onSingletap="backspace" title="←" />
				</View>
			</View>
			<View layout="horizontal" horizontalWrap="false" width="Ti.UI.FILL" height="50%">
				<View width="80%" layout="vertical" height="Ti.UI.FILL">
					<View width="Ti.UI.FILL" height="42" layout="horizontal" horizontalWrap="false">
						<Button width="25%" class="num" onSingletap="numPress" title="1" />
						<Button width="25%" class="num" onSingletap="numPress" title="2" />
						<Button width="25%" class="num" onSingletap="numPress" title="3" />
						<Button width="25%" onSingletap="operation" title="-" />
					</View>
					<View width="Ti.UI.FILL" height="42" layout="horizontal" horizontalWrap="false">
						<Button width="25%" onSingletap="decimal" title="." />
						<Button width="25%" class="num" onSingletap="numPress" title="0" />
						<Button width="25%" onSingletap="operation" id="equalTo" title="=" />
						<Button width="25%" onSingletap="operation" title="+" />
					</View>
				</View>
				<View width="20%" height="Ti.UI.FILL">
					<Button id="submitButton" onSingletap="submitValue" title="确定" width="Ti.UI.FILL" height="Ti.UI.FILL"/>
				</View>
			</View>
		</View>
	</View>
</Alloy>