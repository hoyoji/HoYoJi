<Alloy>
	<View class="container" height="84" openForm="project/projectShareAuthorizationForm">
			<View id="content" class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
				<Widget src="com.hoyoji.titanium.widget.AutoBindPicturePreview" width="56" height="56" left="5"
					bindModel = "$.$model"
					bindAttribute = "pictureId"/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="66" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
					bindModel = "$.$model"
					bindAttribute = "getFriendDisplayName()"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="16" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
					bindModel = "$.$model"
					bindAttribute = "actualTotalExpense"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="42" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
				bindModel = "$.$model"
				bindAttribute = "apportionedTotalExpense"
				/>
			<Label id="checkAccept" visible="false" color="black" right="100">等待接受</Label>
		</View>
	</View>
</Alloy>