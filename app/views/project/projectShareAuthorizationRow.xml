<Alloy>
	<View class="container" height="84">
		<View id="content" class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<Widget src="com.hoyoji.titanium.widget.AutoBindPicturePreview" width="56" height="56" left="5"
				bindModel = "$.$model"
				bindAttribute = "pictureId"/>
			<Label id="checkAccept" visible="false" color="#6e6d6d" top="15" left="66" class="firstRow">等待接受</Label>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" id="sharePercentage" top="52" left="66" width="100" height="Ti.UI.SIZE" class="firstRow"
				bindModel = "$.$model"
				bindAttribute = "getSharePercentage()"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="30" left="66" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="secondRow"
				bindModel = "$.$model"
				bindAttribute = "getFriendDisplayName()"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="16" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
				bindModel = "$.$model"
				bindAttribute = "getActualTotal()"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="36" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
			bindModel = "$.$model"
			bindAttribute = "getApportionedTotal()"
			/>
			
		</View>
	</View>
</Alloy>