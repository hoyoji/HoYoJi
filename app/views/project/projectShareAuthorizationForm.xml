<Alloy>
	<View class="container" saveableContainer="true" backgroundColor="white" width="100%" height="100%">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
				 addModeTitle="新增共享好友" readModeTitle="查看共享属性" editModeTitle="修改共享属性"/>
			  <ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="table" class="table-edit" bottom="0" top="42">
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="项目" 
                		bindModel="$.$model"
                		bindAttribute="project"
                		bindAttributeIsModel="name"
                		/>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="上级分类" hintText="请选择上级分类"
						bindModel="$.$model"
						bindAttribute="friend"
						bindAttributeIsModel="nickName"
						bindModelSelector="friend/friendAll"
						bindModelSelectorParams="selectedProject:project"
					/>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableRadioField" labelText="共享所有子项目" hintText="请输入年龄"
						items="1,0"
						bindModel="$.$model"
						bindAttribute="shareAllSubProjects"/>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableRadioField" labelText="年龄" hintText="请输入年龄"
						items="1,0"
						bindModel="$.$model"
						bindAttribute="projectShareMoneyExpenseOwnerDataOnly"/>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableRadioField" labelText="年龄" hintText="请输入年龄"
						items="1,0"
						bindModel="$.$model"
						bindAttribute="shareAllSubProjects"/>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableRadioField" labelText="年龄" hintText="请输入年龄"
						items="1,0"
						bindModel="$.$model"
						bindAttribute="shareAllSubProjects"/>
           </ScrollView>
	</View>
</Alloy>