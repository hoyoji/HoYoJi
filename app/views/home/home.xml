<Alloy>
	<View class="container" title="主页">
		<!-- <Widget src="com.hoyoji.titanium.widget.HoYoJiUIFrame"/> -->
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" title="主页"
		image="/images/mainWindow/home"/>
		<View id="body" top="50" bottom="50" left="10" right="10" backgroundColor="#ebeeee">
			<View top="0" height="Ti.UI.SIZE" backgroundColor="#f1fbfb">
				<View width="3" height="84" top="0" left="0" backgroundImage="/images/rowLeftShadow.png" backgroundImageRepeat="true"/>				
				<View height="84" width="50%" left="3" layout="vertical">		
					<Label>当日收入</Label>
					<Require id="moneyIncomeTotal" src="money/report/moneyTotal" modelType="MoneyIncome" autoSync="true" totalField="SUM(main.amount * main.exchangeRate)" queryStr="dateRange:date"/>
				</View>
				<View height="84" width="50%" right="0" layout="vertical">
					<Label>当日支出</Label>
					<Require id="moneyExpenseTotal" src="money/report/moneyTotal" modelType="MoneyExpense" autoSync="true" totalField="SUM(main.amount * main.exchangeRate)" queryStr="dateRange:date"/>
				</View>
				<View id="sectionFooter" width="Ti.UI.FILL" height="10" left="0" top="84">
					<View width="Ti.UI.FILL" left="0" height="10" top="0" borderRadius="5" backgroundColor="#f1fbfb" backgroundImage="/images/sectionBottomShadow.png"/>
					<View width="Ti.UI.FILL" height="14" left="0" top="-7" borderRadius="5" backgroundColor="#f1fbfb" zIndex="0"/>
					<View width="10" height="10" left="0" top="1" backgroundImage="/images/rowBottomLeftShadow.png" zIndex="1"/>
				</View>
			</View>
			<Require id="transactionsTable" src="home/activityView" top="94" bottom="0"/>
		</View>
		<Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
		buttons="同步,记一笔,设置" imagesFolder="/images/home"
		ids="sync,moneyAddNew,setting"/>
	</View>
</Alloy>