<Alloy>
	<View class="container" title="主页">
		<!-- <Widget src="com.hoyoji.titanium.widget.HoYoJiUIFrame"/> -->
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" title="主页"
		image="/images/mainWindow/home"/>
		<View id="body" top="50" bottom="50" left="10" right="10" backgroundColor="#e1e1e1">
			<View top="0" height="58" backgroundColor="#d1d1d1">
				<View height="58" width="51%" left="0" top="0" layout="vertical" zIndex="2" backgroundColor="#f5f5f5">
					<Label top="5">当日收入</Label>
					<View layout="horizontal" height="Ti.UI.FILL" horizontalWrap="false" left="30%">
						<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" color="#329600"
						bindModel = "User"
						bindAttribute = "getLocalCurrencySymbol()"
						/>
						<Require id="moneyIncomeTotal" src="money/report/moneyTotal" modelType="MoneyIncome" autoSync="true" totalField="SUM(main.amount * main.exchangeRate)" queryStr="dateRange:date" color="#329600"/>
					</View>
				</View>
				
				<View height="58" width="51%" right="0" top="0" layout="vertical" zIndex="2" backgroundColor="#f5f5f5">
					<Label top="5">当日支出</Label>
					<View layout="horizontal" height="Ti.UI.FILL" horizontalWrap="false" left="30%">
						<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" color="#c80032"
						bindModel = "User"
						bindAttribute = "getLocalCurrencySymbol()"
						/>
						<Require id="moneyExpenseTotal" src="money/report/moneyTotal" modelType="MoneyExpense" autoSync="true" totalField="SUM(main.amount * main.exchangeRate)" queryStr="dateRange:date" color="#c80032"/>
					</View>
				</View>
				
			</View>
			
			<Require id="transactionsTable" src="home/activityView" top="67" bottom="0"/>
		</View>
		<Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
		buttons="同步,记一笔,设置" imagesFolder="/images/home"
		ids="sync,moneyAddNew,setting"/>
	</View>
</Alloy>