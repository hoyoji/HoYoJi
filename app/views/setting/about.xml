<Alloy>
	<View class="container" title="关于好友记">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" title="关于好友记"/>
		<View id="body" top="50" bottom="50" left="10" right="10" backgroundColor="#e1e1e1">
			<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="table" backgroundColor="#e1e1e1" class="table-edit" bottom="0" top="0">
				<View height="150" left="2" top="0" backgroundColor="#f5f5f5" borderRadius="5" zIndex="2">
					<ImageView id="hoyojiPicture" width="100" height="100" top="10" image="/appicon.png"/>
					<Label top="120">关于我们</Label>
				</View>
				<View id="currentVersion" height="43" left="2" top="10"  backgroundColor="#f5f5f5" borderRadius="5" zIndex="2">
					<Label left="10">当前版本</Label>
					<Label id="currentVersionNumber" left="30%" width="Ti.UI.SIZE"></Label>
					<Button id="checkUpdate" right="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE" onClick="checkUpdate">检查更新</Button>
				</View>
				<View id="webAddressView" height="43" left="2" top="5"  backgroundColor="#f5f5f5" borderRadius="5" zIndex="2">
					<Label left="10">网址</Label>
					<Label id="webAddress" left="30%" width="Ti.UI.SIZE" onClick="openWebAddress">www.hoyoji.com</Label>
				</View>
				<View id="emailView" height="43" left="2" top="5"  backgroundColor="#f5f5f5" borderRadius="5" zIndex="2">
					<Label left="10">邮箱</Label>
					<Label id="email" left="30%" width="Ti.UI.SIZE" onClick="sendEmail">support@hoyoji.com</Label>
				</View>
				<View id="weiboView" height="43" left="2" top="5"  backgroundColor="#f5f5f5" borderRadius="5" zIndex="2">
					<Label id="sinaBlog" left="30" width="Ti.UI.SIZE" onClick="openSinaBlog">新浪微博</Label>
					<Label id="qqBlog" right="30" width="Ti.UI.SIZE" onClick="openQqBlog">腾讯微博</Label>
				</View>
				<Label bottom="0">好友记科技@版权所有</Label>
			</ScrollView>
		</View>
	</View>
</Alloy>