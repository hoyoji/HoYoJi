<Alloy>
	<View class="container" height="42" openForm="setting/moneyAccount/moneyAccountForm">
		<View id="content" class="row-content" height="Ti.UI.FILL">
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="10" top="0" width="Ti.UI.SIZE" height="42"
			bindModel = "$.$model"
			bindAttribute = "name"
			/>
			<View width="Ti.UI.SIZE" right="10" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="0" width="Ti.UI.SIZE" height="42"
				bindModel = "$.$model.currency"
				bindAttribute = "symbol"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="0" width="Ti.UI.SIZE" height="42"
				bindModel="$.$model"
				bindAttribute="getCurrentBalance()"
				/>
			</View>
		</View>
	</View>
</Alloy>