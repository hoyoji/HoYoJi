<Alloy>
	<View class="container" saveableContainer="true" backgroundColor="white" width="100%" height="100%">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
		addModeTitle="新增账户" readModeTitle="账户详细" editModeTitle="修改账户"/>
		<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="table" class="table-edit" bottom="0" top="42">
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="账户名称" hintText="请输入账户名称"
			bindModel="$.$model"
			bindAttribute="name"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="币种" hintText="请选择币种"
			editModeEditability="noneditable"
			bindModel="$.$model"
			bindAttribute="currency"
			bindAttributeIsModel="name"
			bindModelSelector="setting/currency/currencyAll"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" inputType="NumericKeyboard" labelText="当前余额" hintText="请输入当前余额"
			bindModel="$.$model"
			bindAttribute="currentBalance"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextArea" labelText="备注" hintText="请输入备注"
			bindModel="$.$model"
			bindAttribute="remark"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableRadioField" labelText="账户公开" hintText="请选择账户公开"
			items="个人,好友,公众"
			values="Private,Friend,Public"
			bindModel="$.$model"
			bindAttribute="sharingType"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableSelector" labelText="账户类型" hintText="请选择账户类型"
			items="现金，储蓄卡，信用卡，网上支付，借贷"
			values="Cash,Deposit,Credit,Online,Loan"
			bindModel="$.$model"
			bindAttribute="accountType"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="账号" hintText="请输入账号"
			bindModel="$.$model"
			bindAttribute="accountNumber"/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="开户地址" hintText="请输入开户地址"
			bindModel="$.$model"
			bindAttribute="bankAddress"/>
		</ScrollView>
	</View>
</Alloy>