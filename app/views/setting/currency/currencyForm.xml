<Alloy>
	<View class="container" saveableContainer="true" backgroundColor="white" width="100%" height="100%">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
		addModeTitle="新增币种" readModeTitle="币种详细" editModeTitle="修改币种"/>
		<TableView id="table" class="table-edit" bottom="0" top="42">
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="币种名称" hintText="请输入币种名称"
				bindModel="$.$model"
				bindAttribute="name"/>
			</TableViewRow>
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="币种符号" hintText="请输入币种符号"
				bindModel="$.$model"
				bindAttribute="symbol"/>
			</TableViewRow>
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="币种代号" hintText="请输入币种代号"
				bindModel="$.$model"
				bindAttribute="code"/>
			</TableViewRow>
		</TableView>
	</View>
</Alloy>