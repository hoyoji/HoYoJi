<Alloy>
	<View class="container" height="84">
		<View id="content" class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<Widget src="com.hoyoji.titanium.widget.AutoBindPicturePreview" width="56" height="56" left="5"
					id="picture"
					bindModel="$.$model"
					bindAttribute="pictureId"
					fetchRemoteImage="fetchUserImageIcon"/>
			
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="66" top="28" width="Ti.UI.SIZE" 
				id="userName" autoInit="false"
				bindModel = "$.$model"
				bindAttribute = "userName" 
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="66" top="45" width="Ti.UI.SIZE" 
				id="nickName" autoInit="false"
				bindModel = "$.$model"
				bindAttribute = "nickName" 
			/>
		</View>
	</View>
</Alloy>