		<View height="43" left="2" backgroundColor="#f5f5f5" borderRadius="5">
			<View left="10" width="90%">
				<Label right="40">自动登录</Label>
			</View>
			<Widget id="autoLogin" src="com.hoyoji.titanium.widget.AutoUpdatableSwitcher" hightLight="false" autoInit="false"
			right="10" width="30"
			values="yes,no"
			items="是,否"/>
		</View>
		<Widget id="loginButton" src="com.hoyoji.titanium.widget.XButton" width="80%" height="42" color="#2E8B57"
		backgroundColor="#e9f3f0"
		autoInit="false"
		title="登录"/>
		<Widget id="registerButton" src="com.hoyoji.titanium.widget.XButton" width="80%" height="42" color="#2E8B57"
		backgroundColor="#e9f3f0"
		autoInit="false"
		title="注册"/>
