<Alloy>
	<View class="container" saveableContainer="true" layout="vertical" height="Ti.UI.SIZE">
		<View height="25" width="Ti.UI.FILL" backgroundColor="#e7f5f5">
			<View width="5" height="25" left="1" bottom="0" backgroundImage="/images/rowTopLeftShadow.png" zIndex="0" />
			<View width="Ti.UI.FILL" height="25" left="3" bottom="0" zIndex="1">
				<Label id="headerTitle" text="  登录" textAlign="Ti.UI.TEXTALIGNMENT_LEFT" width="Ti.UI.FILL" left="0" height="30" bottom="-5" borderRadius="5" color="white"  backgroundImage="/images/headerTitle_green.png"/>
			</View>
		</View>
		<Widget id="userName" src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="用户名" hintText="请输入用户名" keyboardType="Ti.UI.KEYBOARD_ASCII" rowLeftImage="true"
		bindModel="$.$model"
		bindAttribute="userName"/>
		<Widget id="password" src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="密码" hintText="请输入密码" passwordMask="true" rowLeftImage="true"
		bindModel="$.$model"
		bindAttribute="password"/>
		<!-- <TextField top="84" height="42" id="date1" borderWidth="1" width="Ti.UI.FILL"></TextField>
		<TextField top="126" height="42" id="date2" borderWidth="1" width="Ti.UI.FILL"></TextField>
		<TextField top="168" height="42" id="date3" borderWidth="1" width="Ti.UI.FILL"></TextField>
		<Widget id="datePicker" src="com.hoyoji.titanium.widget.DatePicker"/> -->
		<View height="25" width="Ti.UI.FILL" backgroundColor="#f1fbfb">
			<View width="3" left="0" height="25" backgroundImage="/images/rowLeftShadow.png" backgroundRepeat="true" zIndex="0" />
			<View height="Ti.UI.SIZE" width="60%">
				<Button width="45%" left="0" onClick="doLogin">登入</Button>
				<Button width="45%" right="0" onClick="openRegister">注册</Button>
			</View>
		</View>
		<View height="35" width="Ti.UI.FILL" backgroundColor="#f1fbfb">
			<View width="3" left="0" height="35" backgroundImage="/images/rowLeftShadow.png" backgroundRepeat="true" zIndex="0" />
			<Label right="20%">找回密码</Label>
		</View>
		<View id="sectionFooter" width="Ti.UI.FILL" height="10" left="0" top="0">
			<View width="Ti.UI.FILL" left="0" height="10" top="0" borderRadius="5" backgroundColor="#f1fbfb" backgroundImage="/images/sectionBottomShadow.png"/>
			<View width="Ti.UI.FILL" height="14" left="0" top="-7" borderRadius="5" backgroundColor="#f1fbfb" zIndex="0"/>
			<View width="10" height="10" left="0" top="1" backgroundImage="/images/rowBottomLeftShadow.png" zIndex="1"/>
		</View>
	</View>
</Alloy>