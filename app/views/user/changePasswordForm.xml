<Alloy>
	<View class="container" title="修改密码">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" title="修改密码" autoInit="false"/>
		<View id="body" top="50" bottom="0" left="10" right="10" backgroundColor="#e1e1e1" layout="vertical">
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="当前密码" hintText="请输入当前密码" passwordMask="true" noBottomLine="true"
			id="oldPassword"  autoInit="false"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="新密码" hintText="请输入新密码" passwordMask="true" noBottomLine="true"
			id="newPassword"  autoInit="false"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="确认新密码" hintText="请确认新密码" passwordMask="true" noBottomLine="true"
			id="newPassword2"  autoInit="false"
			/>
			
			<Button id="updatePasswordButton" onSingletap="updatePassword"  width="90%" height="42" top="10" borderWidth="0" borderColor="null" style="0" borderRadius="5" backgroundColor="#e9f3f0" color="black">提交</Button>
					
			<!-- <Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
			buttons="提交" imagesFolder=""
			ids="commit"/> -->
		</View>
	</View>
</Alloy>