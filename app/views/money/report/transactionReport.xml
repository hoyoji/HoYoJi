<Alloy>
	<View class="container" title="流水汇总">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" title="流水汇总"/>
		<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="contentScrollView" class="table-edit" bottom="42" top="42">
			<View height="42">
				<Label left="5" width="30%">总收入</Label>
				<Require id="moneyIncomeTotal" src="money/report/moneyTotal" modelType="MoneyIncome" totalField="SUM(main.amount * main.exchangeCurrencyRate)" right="5"/>
			</View>
			<View height="42">
				<Label left="5" width="30%">总支出</Label>
				<Require id="moneyExpenseTotal" src="money/report/moneyTotal" modelType="MoneyExpense" totalField="SUM(main.amount * main.exchangeCurrencyRate)" right="5"/>
			</View>
			<View height="42">
				<Label left="5" width="30%">总借入</Label>
				<Require id="moneyBorrowTotal" src="money/report/moneyTotal" modelType="MoneyBorrow" right="5"/>
			</View>	
			<View height="42">
				<Label left="5" width="30%">总还款</Label>
				<Require id="moneyReturnTotal" src="money/report/moneyTotal" modelType="MoneyReturn" right="5"/>
			</View>	
			<View height="42">
				<Label left="5" width="30%">总借出</Label>
				<Require id="moneyLendTotal" src="money/report/moneyTotal" modelType="MoneyLend" right="5"/>
			</View>	
			<View height="42">
				<Label left="5" width="30%">总收款</Label>
				<Require id="moneyPaybackTotal" src="money/report/moneyTotal" modelType="MoneyPayback" right="5"/>
			</View>	
			<View height="42">
				<Label left="5" width="30%">结余</Label>
				<Label id="totalBalance" right="5">0.00</Label>
			</View>	
		</ScrollView>
		<Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
		buttons="查询"
		ids="transactionsSummuryQuery"/>
	</View>
</Alloy>