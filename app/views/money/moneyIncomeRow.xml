<Alloy>
	<View class="container" height="90" openForm="money/moneyIncomeForm">
		<View width="Ti.UI.FILL" height="1" top="0" left="10" right="10" backgroundImage="/images/rowTopShadow.png" backgroundImageRepeat="true"/>
		<!-- <View width="3" height="Ti.UI.FILL" top="0" left="0" backgroundImage="/images/rowLeftShadow.png" backgroundImageRepeat="true"/> -->
		<View id="content" class="row-content" left="3" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
				<Widget src="com.hoyoji.titanium.widget.AutoBindPicturePreview" width="56" height="56" left="5"
					bindModel="$.$model"
					bindAttribute="pictureId"/>
			
			<!-- <View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="16" left="66" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
				bindModel = "$.$model"
				bindAttribute = "getProjectName()"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="16" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
				dataType="DateTime"
				bindModel = "$.$model"
				bindAttribute = "date"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  left="66" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="secondRow"
				bindModel = "$.$model"
				bindAttribute = "getMoneyIncomeCategoryName()"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE" id="localAmountLabel" class="secondRow"
				bindModel = "$.$model"
				bindAttribute = "getLocalAmount()"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="57" left="66" right="25" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
				bindModel = "$.$model"
				bindAttribute = "remark"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" right="25" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="59" right="25" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
				bindModel = "$.$model"
				bindAttribute = "getFriendUser()"
				/>
			<!-- </View> -->
			<!-- <View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false"> -->
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="59" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
				bindModel = "$.$model"
				bindAttribute = "getAccountCurrency()"
				/>
			<!-- </View> -->
		</View>
	</View>
</Alloy>