<Alloy>
	<View class="container" height="42" openForm="money/moneyExpenseDetailForm">
		<View id="content" class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
				id="name" autoInit="false"
			bindModel = "$.$model"
			bindAttribute = "name"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" right="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE"
				id="amount" autoInit="false"
			bindModel="$.$model"
			bindAttribute="getAmount()"
			/>
		</View>
	</View>
</Alloy>