<Alloy>
	<View class="container" height="84" openForm="money/moneyReturnForm">
		<View id="content" class="row-content" height="Ti.UI.FILL">
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="0" width="Ti.UI.SIZE" height="42"
				bindModel = "$.$model.project"
				bindAttribute = "name"
				/>
			</View>
			<View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="0" width="Ti.UI.SIZE" height="42"
				dataType="DateTime"
				bindModel = "$.$model"
				bindAttribute = "date"
				/>
			</View>
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false">
				<Label top="42" width="Ti.UI.SIZE" height="42">还款</Label>
			</View>
			<View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="42" width="Ti.UI.SIZE" height="42"
				bindModel = "$.$model.localCurrency"
				bindAttribute = "symbol"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="42" width="Ti.UI.SIZE" height="42"
				bindModel = "$.$model"
				bindAttribute = "getLocalAmount()"
				/>
			</View>
		</View>
	</View>
</Alloy>