<Alloy>
	<View class="container" title="支出" saveableContainer="true" top="0" bottom="0">
		<!-- <Widget src="com.hoyoji.titanium.widget.HoYoJiUIFrame"/> -->
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
		addModeTitle="新增支出" readModeTitle="支出详细" editModeTitle="修改支出"/>
		<View id="body" top="42" bottom="0" left="0" right="0" backgroundColor="#e1e1e1">
			<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="contentScrollView" class="table-edit" bottom="0" top="0">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatablePictureField" defaultImage="/images/camera.png"
				id="picture" autoInit="false"
				bindModel="$.$model"
				bindAttribute="picture"
				bindAttributeIsModel="id"/>
				
				<View id="ownerUser" height="0" backgroundColor="#f5f5f5">
					<!-- <View width="3" height="Ti.UI.FILL" top="0" left="0" backgroundImage="/images/rowLeftShadow.png" backgroundImageRepeat="true"/> -->
					<Label left="8" width="30%" height="Ti.UI.FILL" id="friendUserLabel">记账好友</Label>
					<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  hintText="自己" right="0" width="70%"
					id="friendUser" autoInit="false"
					bindModel="$.$model"
					bindAttribute="getFriendUser()"/>
					<View width="Ti.UI.FILL" height="1" bottom="0" left="10" right="10" backgroundImage="/images/formRowBottom.png" backgroundImageRepeat="true"/>
				</View>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableDateTimeField" labelText="时间" hintText="请选择时间" id="date"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="date"/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableNumericField" id="amount" labelText="金额" hintText="请输入金额" rightButtonText="明细"
				editModeEditability="editable" addModeEditability="editable"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="amount"/>
				<View id="localAmountContainer" height="0" backgroundColor="#f5f5f5">
					<!-- <View width="3" height="Ti.UI.FILL" top="0" left="0" backgroundImage="/images/rowLeftShadow.png" backgroundImageRepeat="true"/> -->
					<Label left="8" width="30%" height="Ti.UI.FILL" id="localAmountLabel">金额</Label>
					<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" right="0" width="70%" showRightButton="true" id="localAmount" rightButtonText="明细"
					autoInit="false"
					hintText="请输入金额"
					bindModel="$.$model"
					bindAttribute="getLocalAmount()"/>
					<View width="Ti.UI.FILL" height="1" bottom="0" left="10" right="10" backgroundImage="/images/formRowBottom.png" backgroundImageRepeat="true"/>
				</View>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" id="project" labelText="项目" hintText="请选择项目"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="project"
				bindAttributeIsModel="name"
				bindModelSelector="project/projectAll"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" id="moneyExpenseCategory" labelText="分类" hintText="请选择分类"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="moneyExpenseCategory"
				bindAttributeIsModel="name"
				bindModelSelector="money/moneyExpenseCategoryAll"
				bindModelSelectorParams="selectedProject:project"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" id="moneyAccount" labelText="账户" hintText="请选择账户"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="moneyAccount"
				bindAttributeIsModel="getAccountNameCurrency()"
				bindModelSelector="money/moneyAccount/moneyAccountAll"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableNumericField" height="0" id="exchangeRate" labelText="汇率" hintText="请输入汇率"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="exchangeRate"/>
				<!-- <Button id="updateRate">更新本地汇率</Button> -->
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField"  id="friend" labelText="商家" hintText="无商家"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="friendUser"
				bindAttributeIsModel="getFriendDisplayName()"
				bindModelSelector="friend/friendAll"
				bindModelSelectorConvertType="Friend"
				bindModelSelectorConvert2Model="convertUser2FriendModel"
				bindModelSelectorConvertSelectedModel="convertSelectedFriend2UserModel"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" height="0" id="friendAccount" labelText="商家账户" hintText="无商家账户"
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="friendAccount"
				bindAttributeIsModel="getAccountNameCurrency()"
				bindModelSelector="money/moneyAccount/moneyAccountAll"
				bindModelSelectorParams="selectedFriendUser:friendUser"
				/>
				<!-- <View height="42" backgroundColor="#f5f5f5">
					<Label left="8" width="30%" height="Ti.UI.FILL" id="expenseTypeLabel">是否预支</Label>
					<Widget src="com.hoyoji.titanium.widget.AutoUpdatableSwitcher" right="0" width="70%"
					id="expenseType" autoInit="false"
					hightLight="false"
					items="否,是"
					values="Ordinary,PreExpense"
					bindModel="$.$model"
					bindAttribute="expenseType"/>
					<View width="Ti.UI.FILL" height="1" bottom="0" left="10" right="10" backgroundImage="/images/formRowBottom.png" backgroundImageRepeat="true"/>
				</View> -->
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextArea" id="remark" labelText="备注" hintText="添加备注" 
				autoInit="false"
				bindModel="$.$model"
				bindAttribute="remark"/>
				
				<Widget src="com.hoyoji.titanium.widget.XButton" id="apportion"
				autoInit="false"
				height="42" width="100%" title="多人分摊" 
				backgroundColor="green" image="none" />
	
			</ScrollView>
		</View>
	</View>
</Alloy>