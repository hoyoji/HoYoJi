<Alloy>
	<View class="container" height="56">
		<View id="content" class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<Widget id="name" src="com.hoyoji.titanium.widget.AutoBindLabel" left="10"
				autoInit="false"
			bindModel = "$.$model"
			bindAttribute = "getFriendDisplayName()"
			/>
			<Widget id="amount" src="com.hoyoji.titanium.widget.AutoUpdatableNumericField" left="180"  width="30%" height="28"
				autoInit="false"
			editModeEditability="noneditable" addModeEditability="noneditable"
			bindModel = "$.$model"
			bindAttribute = "amount"
			/>
			<Widget id="localAmount" src="com.hoyoji.titanium.widget.AutoBindLabel" left="180"  width="30%" height="0"
				autoInit="false"
			editModeEditability="noneditable" addModeEditability="noneditable"
			bindModel = "$.$model"
			bindAttribute = "getAmount()"
			/>
			<Widget id="apportionType" src="com.hoyoji.titanium.widget.AutoBindLabel" width="30%" top="36" left="240" height="20" color="#6e6d6d" font="fontSize:12"
				autoInit="false" 
			bindModel="$.$model"
			bindAttribute="getApportionType()"
			/>
			<Label id="removeMember" right="0" height="56"  width="10%" backgroundColor="red">del<Label/>
		</View>
	</View>
</Alloy>