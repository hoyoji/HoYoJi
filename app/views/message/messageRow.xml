<Alloy>
	<View class="container" height="84" >
			<View width="3" height="Ti.UI.FILL" top="0" left="0" backgroundImage="/images/rowLeftShadow.png" backgroundImageRepeat="true"/>
			<View id="content" class="row-content" left="3" height="Ti.UI.FILL" backgroundColor="#f8f8f8">
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="0" left="10" width="Ti.UI.SIZE" height="42"
				bindModel = "$.$model"
				bindAttribute = "messageTitle"
				/>
			</View>
			<View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="0" width="Ti.UI.SIZE" height="42"
				dataType="DateTime"
				bindModel = "$.$model"
				bindAttribute = "date"
				/>
			</View>
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="10" top="42" width="Ti.UI.SIZE" height="42"
					bindModel = "$.$model"
					bindAttribute = "detail" 
				/>
			</View>
		</View>
	</View>
</Alloy>