<Alloy>
	<View class="container" height="42" >
		<View id="content" class="row-content" height="Ti.UI.FILL">
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="5" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="10" top="0" width="Ti.UI.SIZE" height="42"
					bindModel = "$.$model"
					bindAttribute = "messageTitle" 
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="0" right="5" width="Ti.UI.SIZE" height="42"
					dataType="DateTime"
					bindModel = "$.$model"
					bindAttribute = "date"
				/>
			<View>
		</View>
	</View>
</Alloy>