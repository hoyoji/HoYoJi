<Alloy>
	<View class="container" height="84" >
			<View class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<ImageView id="messageImage" left="5" width="38" height="38"/>
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="48" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="16" left="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="secondRow"
				bindModel = "$.$model"
				bindAttribute = "messageTitle"
				/>
			</View>
			<View width="Ti.UI.SIZE" right="5" height="Ti.UI.FILL" layout="horizontal" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="16" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
				dataType="DateTime"
				bindModel = "$.$model"
				bindAttribute = "date"
				/>
			</View>
			<View width="Ti.UI.SIZE" height="Ti.UI.FILL" layout="horizontal" left="48" horizontalWrap="false">
				<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="10" top="46" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
					bindModel = "$.$model"
					bindAttribute = "detail" 
				/>
			</View>
		</View>
	</View>
</Alloy>