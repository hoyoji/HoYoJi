<Alloy>
	<View class="container" height="84" >
			<View class="row-content" left="0" height="Ti.UI.FILL" backgroundColor="#f5f5f5">
			<ImageView id="messageImage" left="5" width="38" height="38"/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel"  top="30" left="48" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="secondRow"
			id="messageTitle" autoInit="false"
			bindModel = "$.$model"
			bindAttribute = "messageTitle"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" top="16" right="5" width="Ti.UI.SIZE" height="Ti.UI.SIZE" class="firstRow"
			id="date" autoInit="false"
			dataType="DateTime"
			bindModel = "$.$model"
			bindAttribute = "date"
			/>
			<Widget src="com.hoyoji.titanium.widget.AutoBindLabel" left="48" top="57" width="250" height="14" class="firstRow"
				id="detail" autoInit="false"
				bindModel = "$.$model"
				bindAttribute = "detail" 
			/>
		</View>
	</View>
</Alloy>