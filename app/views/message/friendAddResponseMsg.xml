<Alloy>
	<View class="container" saveableContainer="true" backgroundColor="white" width="100%" height="100%">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
		addModeTitle="发送好友请求" readModeTitle="查看好友请求" editModeTitle="修改好友请求" editModeMenuButtonTitle="同意"/>
		<TableView id="table" class="table-edit" bottom="0" top="42">
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="好友" 
                		bindModel="$.$model"
                		bindAttribute="fromUser"
                		bindAttributeIsModel="userName"
                		/>
			</TableViewRow>
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="请求消息"
				bindModel="$.$model"
				bindAttribute="detail"/>
			</TableViewRow>
		</TableView>
		<View bottom="0" layout="horizontal" height="Ti.UI.SIZE">
		 <Button id="ignoreButton" title="忽略" height="43" right="0" width="30%" />
		 <Button id="rejectFriendButton" title="拒绝" height="43" right="0" width="30%" />
		 <Button id="addFriendButton" title="加为好友" height="43" right="0" width="30%" />
		</View>
	</View>
</Alloy>