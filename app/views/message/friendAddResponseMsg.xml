<Alloy>
	<View class="container" saveableContainer="true" backgroundColor="white" width="100%" height="100%">
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" saveableMode="read"
		addModeTitle="好友请求" readModeTitle="好友请求" editModeTitle="好友请求" editModeMenuButtonTitle="同意"/>
		<TableView id="table" class="table-edit" bottom="42" top="42">
			<TableViewRow class="table-edit-row">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="好友" 
                		bindModel="$.$model"
                		bindAttribute="fromUser"
                		bindAttributeIsModel="userName"
                		/>
			</TableViewRow>
			<TableViewRow class="table-edit-row">
				<Widget id="msgDetail" src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="请求消息"
				bindModel="$.$model"
				bindAttribute="detail"/>
			</TableViewRow>
		</TableView>
		<Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
        	buttons="忽略,拒绝,加为好友"
        	ids="ignore,reject,addFriend"/>
	</View>
</Alloy>