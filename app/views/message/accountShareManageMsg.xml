<Alloy>
	<View class="container" saveableContainer="true"  width="100%" height="100%">
		<!-- <Widget src="com.hoyoji.titanium.widget.HoYoJiUIFrame"/> -->
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar" saveableMode="read"
		addModeTitle="分享请求" readModeTitle="分享请求" editModeTitle="分享请求" editModeMenuButtonTitle="同意"/>
		<View id="body" top="50" bottom="50" left="10" right="10" backgroundColor="#f6f6f6">
			<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="table" class="table-edit" bottom="0" top="0">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableDateTimeField" labelText="发送时间"
				bindModel = "$.$model"
				bindAttribute = "date"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="好友"
				bindModel="$.$model"
				bindAttribute="fromUser"
				bindAttributeIsModel="userName"
				/>
				<Widget id="msgDetail" src="com.hoyoji.titanium.widget.AutoUpdatableTextArea" labelText="请求信息" height="84" width="Ti.UI.FILL"
				bindModel="$.$model"
				bindAttribute="detail"/>
			</ScrollView>
		</View>
		<Widget id="footerBar" src="com.hoyoji.titanium.widget.FooterBar" onSingletap="onFooterbarTap"
		buttons="导入到本地"
		ids="importToLocal"/>
	</View>
</Alloy>
