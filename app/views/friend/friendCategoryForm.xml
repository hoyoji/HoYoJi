<Alloy>
	<View class="container" saveableContainer="true"  width="100%" height="100%">
		<!-- <Widget src="com.hoyoji.titanium.widget.HoYoJiUIFrame"/> -->
		<Widget id="titleBar" src="com.hoyoji.titanium.widget.TitleBar"
		addModeTitle="新增好友分类" readModeTitle="好友分类" editModeTitle="修改好友分类"/>
		<View id="body" top="50" bottom="50" left="10" right="10" backgroundImage="/images/bodyImage.png">
			<ScrollView layout="vertical" scrollType="vertical" disableBounce="true" id="table" class="table-edit" bottom="0" top="0">
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" labelText="上级分类" hintText="请选择上级分类"
				bindModel="$.$model"
				bindAttribute="parentFriendCategory"
				bindAttributeIsModel="name"
				bindModelSelector="friend/friendCategoryAll"
				/>
				<Widget src="com.hoyoji.titanium.widget.AutoUpdatableTextField" id="name" labelText="分类名称" hintText="请输入分类名称"
				bindModel="$.$model"
				bindAttribute="name"/>
			</ScrollView>
		</View>
	</View>
</Alloy>